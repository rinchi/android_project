<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/activity_second_text_view_ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:paddingLeft="17dp"
        android:text="@string/ime"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activity_second_text_view_prezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_second_text_view_ime"
        android:layout_below="@+id/activity_second_text_view_ime"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:paddingLeft="17dp"
        android:text="@string/prezime"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activity_second_text_view_adresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/activity_second_text_view_prezime"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:text="@string/adresa" />

</RelativeLayout>